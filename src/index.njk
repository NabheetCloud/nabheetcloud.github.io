{# Hero Section #}
<section class="bg-gradient-to-br from-gray-50 to-white dark:from-gray-900 dark:to-gray-800 py-20">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h1 class="text-5xl md:text-6xl font-bold mb-6 text-gray-900 dark:text-gray-100">
      Tech Learnings
    </h1>
    <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 mb-8">
      Learning by building — every experiment, every failure, every breakthrough.
    </p>
    <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
      Engineering from first principles. No theory without implementation.
    </p>
  </div>
</section>

{# Recent Posts Section #}
<section class="max-w-6xl mx-auto px-4 py-16">
  <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-gray-100">
    Recent Posts
  </h2>
  
  {% if collections.posts.length > 0 %}
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {% for post in collections.posts | reverse | limit(6) %}
      {% include "partials/post-card.njk" %}
    {% endfor %}
  </div>
  {% else %}
  <p class="text-gray-600 dark:text-gray-400">
    No posts yet. Check back soon!
  </p>
  {% endif %}
</section>

