---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {# Homepage #}
  <url>
    <loc>{{ site.url or 'https://yourdomain.com' }}/</loc>
    <lastmod>{{ page.date | dateToRfc3339 }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
  
  {# Static Pages #}
  <url>
    <loc>{{ site.url or 'https://yourdomain.com' }}/about/</loc>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  
  <url>
    <loc>{{ site.url or 'https://yourdomain.com' }}/archive/</loc>
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  </url>
  
  {# Blog Posts #}
  {% for post in collections.posts %}
  <url>
    <loc>{{ site.url or 'https://yourdomain.com' }}{{ post.url }}</loc>
    <lastmod>{{ post.date | dateToRfc3339 }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.9</priority>
  </url>
  {% endfor %}
  
  {# Tag Pages #}
  {% for tag in collections.tagList %}
  <url>
    <loc>{{ site.url or 'https://yourdomain.com' }}/tags/{{ tag | slug }}/</loc>
    <changefreq>weekly</changefreq>
    <priority>0.6</priority>
  </url>
  {% endfor %}
</urlset>

