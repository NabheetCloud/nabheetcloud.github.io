---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
  addAllPagesToCollections: true
permalink: /tags/{{ tag | slug }}/
layout: layouts/base.njk
eleventyComputed:
  title: "Posts tagged '{{ tag }}'"
  description: "All posts tagged with {{ tag }}"
---

<div class="max-w-6xl mx-auto px-4 py-8 md:py-12">
  {# Tag Header #}
  <header class="mb-12">
    <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900 dark:text-gray-100">
      Posts tagged: <span class="text-accent-light dark:text-accent-dark">{{ tag }}</span>
    </h1>
    <p class="text-lg text-gray-600 dark:text-gray-400">
      {{ collections[tag].length }} post{% if collections[tag].length != 1 %}s{% endif %} found
    </p>
  </header>

  {# Posts Grid #}
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {% for post in collections[tag] | reverse %}
      {% include "partials/post-card.njk" %}
    {% endfor %}
  </div>

  {# Back to Home Link #}
  <div class="mt-12 text-center">
    <a href="/" class="inline-block px-6 py-3 rounded-lg bg-accent-light dark:bg-accent-dark text-white font-medium hover:opacity-90 transition-opacity duration-200">
      ‚Üê Back to Home
    </a>
  </div>
</div>

